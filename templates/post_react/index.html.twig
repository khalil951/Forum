{% extends 'base.html.twig' %}

{% block title %}PostReact index{% endblock %}

{% block body %}
    <h1>PostReact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Post_id</th>
                <th>User_id</th>
                <th>Isliked</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post_react in post_reacts %}
            <tr>
                <td>{{ post_react.id }}</td>
                <td>{{ post_react.postId }}</td>
                <td>{{ post_react.userId }}</td>
                <td>{{ post_react.Isliked ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_post_react_show', {'id': post_react.id}) }}">show</a>
                    <a href="{{ path('app_post_react_edit', {'id': post_react.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_react_new') }}">Create new</a>
{% endblock %}
