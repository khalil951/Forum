  </div>
</div>
    </div>
     {% else %}
            <div>
                <p style='margin-bottom:20px;'>no records found</p>
            </div>
    {% endfor %}
    </div>


<style>
.card-container {
    height: 100vh;
    padding-bottom:0; 
    margin-bottom:2rem; 
    display: grid; 
    grid-template-columns: repeat(3, 1fr); 
    grid-gap: 20px;
}

.card-container .container {
    margin-top: 1rem; /* Adjust top margin as needed */
}

</style>

<script>
const likes = document.querySelectorAll('.LikeBtn');
const dislikes = document.querySelectorAll('.DislikeBtn');

likes.forEach(like => {
    like.addEventListener('click', (e) => {
        e.stopPropagation(); // Stop event propagation
        console.log('Like clicked');

        let NumLikes = document.querySelector('#NumLikes');
        let NumLikesValue = parseInt(NumLikes.innerText, 10);
        NumLikesValue++;
        NumLikes.innerText = NumLikesValue.toString();
    });
});

dislikes.forEach(dislike => {
    dislike.addEventListener('click', (e) => {
        e.stopPropagation(); // Stop event propagation

        console.log('Dislike clicked');

        let NumDislikes = document.querySelector('#NumDislikes');
        let NumDislikesValue = parseInt(NumDislikes.innerText, 10);
        NumDislikesValue++;
        NumDislikes.innerText = NumDislikesValue.toString();
    });
});

</script>

{% endblock %}
